@import "../variables"

.button-group
    display inline-block
    cursor pointer
    & > *
        margin-left -1px
    & > *:first-child
        border-top-left-radius 4px
        border-bottom-left-radius 4px
        margin-left 0
    & > *:last-child
        border-top-right-radius 4px
        border-bottom-right-radius 4px
    & > .active
        background-color ui_orange_pale
        border-color ui_orange
        position relative
